@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="CreateList" method="post">
    
    @for (int i = 0; i < 3; i++)
    {
        <p>
            <input name="model[@i].Name" />
            <input name="model[@i].Price" />
        </p>
        <hr />
    }

    <button type="submit">Send</button>
</form>
